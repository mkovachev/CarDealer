@model IEnumerable<CarWithPartsServiceModel>
@{
    ViewData["Title"] = "All Cars with parts details";
}
<h2>Cars with Parts</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Car Model</th>
            <th>Parts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make @car.Model</td>
            </tr>
            <tr>
                <td>
                    <ul>
                        @foreach (var part in car.Parts)
                        {
                            <li>@part.Name: $@part.Price.ToString("F2")</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>