@model IEnumerable<CarWithPartsModel>
@{
    ViewData["Title"] = "Cars with Parts";
}
<h2>Cars with Parts</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>TravelledDistance</th>
            <th>Parts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.TravelledDistance</td>
                <td>@car.Parts</td>
            </tr>
            <tr>
                <td>
                    <ul>
                        @foreach (var part in car.Parts)
                        {
                            <li>@part.Name: $@part.Price.ToString("F2")</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>